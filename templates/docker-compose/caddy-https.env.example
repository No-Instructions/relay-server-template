# Example environment configuration for caddy-https.yaml
# Copy this to .env and customize the values

# Domain Configuration
DOMAIN=relay.yourdomain.com

# Relay Server Configuration  
RELAY_SERVER_AUTH=your-auth-token-here

# Storage Configuration
# Choose ONE of the following storage options:

# Option 1: AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
# AWS_ENDPOINT_URL_S3=  # Leave blank for standard AWS S3
AWS_S3_USE_PATH_STYLE=false
RELAY_SERVER_STORAGE=s3://your-bucket-name

# Option 2: Cloudflare R2
# AWS_ACCESS_KEY_ID=your-r2-access-key
# AWS_SECRET_ACCESS_KEY=your-r2-secret-key
# AWS_REGION=auto
# AWS_ENDPOINT_URL_S3=https://your-account-id.r2.cloudflarestorage.com
# AWS_S3_USE_PATH_STYLE=true
# RELAY_SERVER_STORAGE=s3://your-bucket-name

# Option 3: Other S3-compatible storage
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_ENDPOINT_URL_S3=https://your-s3-endpoint.com
# AWS_S3_USE_PATH_STYLE=true
# RELAY_SERVER_STORAGE=s3://your-bucket-name